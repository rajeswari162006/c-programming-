#include <stdio.h>

int main() {
    FILE *source, *dest;
    char ch;

    source = fopen("source.txt", "r");
    dest = fopen("destination.txt", "w");

    if (source == NULL || dest == NULL) {
        printf("Unable to open file.\n");
        return 1;
    }

    while ((ch = fgetc(source)) != EOF) {
        fputc(ch, dest);
    }

    fclose(source);
    fclose(dest);
    printf("File copied successfully.\n");
    return 0;
}

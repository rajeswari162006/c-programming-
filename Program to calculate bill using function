#include <stdio.h>

float calculateBill(float price, int quantity) {
    return price * quantity;
}

int main() {
    float price;
    int quantity;
    printf("Enter price of item: ");
    scanf("%f", &price);
    printf("Enter quantity: ");
    scanf("%d", &quantity);

    float total = calculateBill(price, quantity);
    printf("Total Bill: %.2f\n", total);

    return 0;
}

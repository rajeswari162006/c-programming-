#include <stdio.h>

int main() {
    char name[50];
    int empID;
    float basic, hra, da, tax, netSalary;

    // Input employee details
    printf("Enter Employee Name: ");
    scanf(" %[^\n]s", name); // Reads full name with spaces

    printf("Enter Employee ID: ");
    scanf("%d", &empID);

    printf("Enter Basic Salary: ");
    scanf("%f", &basic);

    printf("Enter HRA: ");
    scanf("%f", &hra);

    printf("Enter DA: ");
    scanf("%f", &da);

    printf("Enter Tax Deduction: ");
    scanf("%f", &tax);

    // Calculate Net Salary
    netSalary = basic + hra + da - tax;

    // Print Salary Slip
    printf("\n--------------------------------\n");
    printf("          SALARY SLIP\n");
    printf("--------------------------------\n");
    printf("Employee Name : %s\n", name);
    printf("Employee ID   : %d\n", empID);
    printf("Basic Salary  : %.2f\n", basic);
    printf("HRA           : %.2f\n", hra);
    printf("DA            : %.2f\n", da);
    printf("Tax Deduction : %.2f\n", tax);
    printf("--------------------------------\n");
    printf("Net Salary    : %.2f\n", netSalary);
    printf("--------------------------------\n");

    return 0;
}

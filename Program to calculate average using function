#include <stdio.h>

float calculateAverage(int n, int arr[]) {
    int sum = 0;
    for(int i = 0; i < n; i++) sum += arr[i];
    return (float)sum / n;
}

int main() {
    int n;
    printf("Enter number of elements: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter %d numbers: ", n);
    for(int i = 0; i < n; i++) scanf("%d", &arr[i]);

    float avg = calculateAverage(n, arr);
    printf("Average: %.2f\n", avg);

    return 0;
}

#include <stdio.h>

struct Student {
    int roll;
    char name[50];
    float marks;
};

int main() {
    struct Student s;
    FILE *fp;
    int count = 0;

    fp = fopen("students.txt", "r");
    if (fp == NULL) {
        printf("Unable to open file.\n");
        return 1;
    }

    while (fscanf(fp, "%d %s %f", &s.roll, s.name, &s.marks) != EOF) {
        count++;
    }

    fclose(fp);
    printf("Total records in file: %d\n", count);
    return 0;
}

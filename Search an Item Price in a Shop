#include <stdio.h>
#include <string.h>

int main() {
    int n, i, found = 0;
    char items[50][50], search[50];
    float prices[50];

    printf("Enter number of items: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++) {
        printf("Enter name of item %d: ", i+1);
        scanf(" %[^\n]s", items[i]);
        printf("Enter price of item %d: ", i+1);
        scanf("%f", &prices[i]);
    }

    printf("Enter item name to search: ");
    scanf(" %[^\n]s", search);

    for(i = 0; i < n; i++) {
        if(strcmp(items[i], search) == 0) {
            printf("Price of %s: %.2f\n", items[i], prices[i]);
            found = 1;
            break;
        }
    }

    if(!found) {
        printf("Item not found!\n");
    }

    return 0;
}
